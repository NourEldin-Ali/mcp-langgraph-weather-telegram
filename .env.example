# --- LLM selection: openai | groq | azure_openai ---
LLM_TYPE="openai"

# --- LLM defaults ---
LLM_MODEL_NAME="gpt-4o-mini"
LLM_TEMPERATURE=0.2
LLM_MAX_RETRIES=2

# --- OpenAI ---
OPENAI_API_KEY="sk-...your-openai-key..."

# --- GROQ ---
GROQ_API_KEY="..."

# --- Azure OpenAI ---
AZURE_OPENAI_API_KEY="..."
AZURE_OPENAI_ENDPOINT="https://your-endpoint.openai.azure.com/"

# --- Telegram MCP server ---
TELEGRAM_BOT_TOKEN="123456789:ABCDEF_your_bot_token"
TELEGRAM_CHAT_ID="123456789"

# --- Weather MCP server ---
DEFAULT_WEATHER_UNITS="metric"  # metric | imperial

# --- Logs ---
LOG_LEVEL="INFO"
